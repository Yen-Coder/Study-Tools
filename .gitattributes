# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Python configuration files
*.cfg text eol=lf
*.ini text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
requirements.txt text eol=lf
requirements-*.txt text eol=lf
Pipfile text eol=lf
pyproject.toml text eol=lf
setup.py text eol=lf
setup.cfg text eol=lf
MANIFEST.in text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf
LICENSE text eol=lf
README* text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# JSON
*.json text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files (explicitly marked to prevent diff/merge)
*.pkl binary
*.pickle binary
*.npy binary
*.npz binary
*.h5 binary
*.hdf5 binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.bz2 binary
*.7z binary

# PDF
*.pdf binary

# Jupyter Notebooks - use nbdime for diffing
*.ipynb text eol=lf merge=nbdime-merge
